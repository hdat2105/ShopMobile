@model ShopMobileConnection.LoaiSanPham
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<style>
    body {
        background-color: #000000
    }

    input[type=text] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #070ee7;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }
</style>



<div style="margin:auto;">
    @using (Html.BeginForm("Edit", "LoaiSanPhamAdmin", FormMethod.Post, new { @styles = "width : 50%; margin: auto;" }))
    {
        <label for="fname">Mã Sản Phẩm</label>
        <input type="text" id="fname" name="MaLoaiSanPham" style="background-color:#5d5e63;" placeholder="Nhập mã sản phẩm ..." required value="@Model.MaLoaiSanPham " >

        <label for="lname">Tên Sản Phẩm</label>
        <input type="text" id="lname" name="TenLoaiSanPham" style="background-color:#5d5e63;" placeholder="Tên sản phẩm.." required value="@Model.TenLoaiSanPham">

        <label for="country">Tình Trạng</label>
        <select id="country" style=" width: 20%; background-color:#5d5e63" name="TinhTrang" required>
            @if (Model.TinhTrang == "1")
            {
                <option value="0">Chưa Khóa </option>
                <option value="1" selected>Khóa</option>
            }
            else
            {
                <option value="0" selected>Chưa Khóa </option>
                <option value="1">Khóa</option>
            }


        </select>


        <input type="submit" value="Xác Nhận Chỉnh Sửa">
    }


</div>

